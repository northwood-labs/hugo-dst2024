{
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "svgo": "2.8.0"
      }
    }
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=9.10.0"
  },
  "browserslist": [
    "> 0.5%, last 2 versions, not dead",
    "maintained node versions"
  ],
  "source": [
    "layouts/index.html",
    "layouts/_default/*.html",
    "layouts/partials/.*/*.html",
    "assets/css/_tailwind.css",
    "assets/js/_core.js"
  ],
  "targets": {
    "default": {
      "distDir": "../../dist",
      "publicUrl": "/static"
    }
  },
  "scripts": {
    "start": "TAILWIND_MODE=watch NODE_ENV=development npm-run-all pre:twcss --parallel dev:*",
    "lint": "npm-run-all eslint markdownlint",
    "eslint": "eslint --fix assets/js/_*.js",
    "markdownlint": "markdownlint --fix '**/*.md' --ignore 'node_modules'",
    "build": "NODE_ENV=production npm-run-all pre:twcss --parallel prod:*",
    "pre:twcss": "tailwindcss build -i ./assets/css/_tailwind.css -o ./assets/css/index.css --jit",
    "dev:twcssw": "tailwindcss build -i ./assets/css/_tailwind.css -o ./assets/css/index.css --jit -w",
    "dev:parcel": "parcel watch --detailed-report=10",
    "prod:twcss": "tailwindcss build -i ./assets/css/_tailwind.css -o ./assets/css/index.css --jit --minify",
    "prod:parcel": "rm -f assets/js/index.js && parcel build --detailed-report=10 --no-cache --log-level=verbose && cp -vf ../../dist/assets/js/_core.js assets/js/index.js"
  },
  "dependencies": {
    "alpinejs": "^3.14.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.17.0",
    "@parcel/bundler-default": "^2.13.3",
    "@parcel/compressor-brotli": "^2.13.2",
    "@parcel/compressor-gzip": "^2.13.2",
    "@parcel/config-default": "^2.13.2",
    "@parcel/namer-default": "^2.13.2",
    "@parcel/optimizer-css": "^2.13.2",
    "@parcel/optimizer-esbuild": "^2.13.2",
    "@parcel/optimizer-htmlnano": "^2.13.2",
    "@parcel/packager-css": "^2.13.2",
    "@parcel/packager-html": "^2.13.2",
    "@parcel/packager-js": "^2.13.2",
    "@parcel/packager-raw": "^2.13.2",
    "@parcel/reporter-cli": "^2.13.2",
    "@parcel/resolver-default": "^2.13.2",
    "@parcel/resolver-glob": "^2.13.2",
    "@parcel/transformer-css": "^2.13.2",
    "@parcel/transformer-html": "^2.13.2",
    "@parcel/transformer-js": "^2.13.2",
    "@parcel/transformer-postcss": "^2.13.2",
    "@parcel/transformer-raw": "^2.13.2",
    "@parcel/transformer-vue": "^2.13.2",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.13.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.13.2",
    "parcel-reporter-clean-dist": "^1.0.4",
    "parcel-resolver-ignore": "^2.2.0",
    "postcss": "^8.4.49",
    "postcss-cli": "^11.0.0",
    "postcss-custom-properties": "^14.0.4",
    "postcss-import": "^16.1.0",
    "postcss-url": "^10.1.3",
    "posthtml-doctype": "^1.1.1",
    "prettier": "^3.4.2",
    "prettier-plugin-go-template": "^0.0.15",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "snyk": "^1.1294.3",
    "svgo": "^3.3.2",
    "tailwindcss": "^3.4.16"
  },
  "parcelIgnore": [
    "{{.*}}",
    "/images/.*"
  ]
}
